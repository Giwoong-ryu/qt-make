# QT Video SaaS - Production Environment Variables
# 프로덕션 배포 시 이 파일을 .env.production으로 복사하고 실제 값으로 채우세요

# ===========================================
# Database (Supabase)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# ===========================================
# AI APIs
# ===========================================
# Groq API (STT - Whisper)
GROQ_API_KEY=your_groq_api_key

# Google Gemini API (교정 + 감정분석 + Vision)
GOOGLE_API_KEY=your_google_api_key
GEMINI_API_KEY=your_google_api_key

# ===========================================
# Media APIs
# ===========================================
# Pexels API (배경 영상)
PEXELS_API_KEY=your_pexels_api_key

# ===========================================
# Cloud Storage (Cloudflare R2)
# ===========================================
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=qt-videos
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# ===========================================
# Payment (PortOne)
# ===========================================
PORTONE_API_KEY=your_portone_api_key
PORTONE_API_SECRET=your_portone_api_secret

# PortOne 채널 키 (프로덕션용)
NEXT_PUBLIC_PORTONE_STORE_ID=your_store_id
NEXT_PUBLIC_PORTONE_CHANNEL_KEY=your_production_channel_key

# 테스트 채널 키 (선택사항 - 개발 환경용)
NEXT_PUBLIC_PORTONE_TEST_CHANNEL_KEY=your_test_channel_key

# ===========================================
# Redis (Celery Broker)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# Backend API URL
# ===========================================
# 프로덕션 도메인으로 변경 필요
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# ===========================================
# Next.js
# ===========================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ===========================================
# 보안 설정
# ===========================================
# CORS 허용 도메인 (쉼표로 구분)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# JWT Secret (생성 방법: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_key_here

# ===========================================
# 배포 관련
# ===========================================
# 로그 레벨 (production에서는 INFO 권장)
LOG_LEVEL=INFO

# 워커 프로세스 수 (CPU 코어 수에 맞게 조정)
WORKERS=4

# Uvicorn 설정
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
